<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.lucaophp.passaslide.MainActivity">

    <Button
        android:id="@+id/btnPlus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:layout_alignBaseline="@+id/btnMute"
        android:layout_alignBottom="@+id/btnMute"
        android:layout_alignLeft="@+id/btnRight"
        android:layout_alignStart="@+id/btnRight" />

    <Button
        android:id="@+id/btnMen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnLeft"
        android:layout_alignStart="@+id/btnLeft"
        android:text="-"
        android:layout_above="@+id/btnDesligar" />

    <Button
        android:id="@+id/btnLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="220dp"
        android:text="ESQUERDA" />

    <Button
        android:id="@+id/btnRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnLeft"
        android:layout_alignBottom="@+id/btnLeft"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="36dp"
        android:layout_marginRight="36dp"
        android:text="Direita" />

    <Button
        android:id="@+id/btnESC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnF5"
        android:layout_alignBottom="@+id/btnF5"
        android:layout_alignLeft="@+id/btnLeft"
        android:layout_alignStart="@+id/btnLeft"
        android:text="ESC" />

    <Button
        android:id="@+id/btnEnter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnRight"
        android:layout_alignBottom="@+id/btnRight"
        android:layout_centerHorizontal="true"
        android:text="Enter" />

    <Button
        android:id="@+id/btnF5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnRight"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/btnRight"
        android:layout_marginTop="15dp"
        android:text="F5" />

    <Button
        android:id="@+id/btnMute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btnMen"
        android:text="MUDO"
        android:layout_alignRight="@+id/btnEnter"
        android:layout_alignEnd="@+id/btnEnter" />

    <Button
        android:id="@+id/btnDesligar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DESLIGAR"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/btnMute"
        android:layout_alignStart="@+id/btnMute" />

    <Button
        android:id="@+id/btnCancelar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancela del"
        android:layout_alignTop="@+id/btnESC"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
